<body>

    <div id="home" class="screen">
        <h1>English Master</h1>
        <button class="btn-primary" onclick="showScreen('lektionWaehlen')">Lektion w√§hlen</button>
        <button class="btn-outline" onclick="showScreen('lektionErfassen')">Lektion erfassen</button>
        <button class="btn-outline" onclick="showScreen('lektionenVerwalten')">Vokabeln korrigieren</button>
    </div>

    <div id="lektionErfassen" class="screen hidden">
        <h2>Neue Lektion</h2>
        <input type="date" id="lekDatum">
        <input type="text" id="lekThema" placeholder="Thema (z.B. At School)">
        <input type="text" id="lekSeite" placeholder="Buchseite">
        
        <div id="wordInputs">
            <h3>W√∂rter hinzuf√ºgen</h3>
            <div class="word-entry">
                <input type="text" class="enIn" placeholder="English">
                <input type="text" class="deIn" placeholder="Deutsch">
                <select class="typeIn">
                    <option value="Nomen">Nomen</option>
                    <option value="Verb">Verb</option>
                    <option value="Adjektiv">Adjektiv</option>
                    <option value="Andere">Andere</option>
                </select>
            </div>
        </div>
        <button class="btn-outline" onclick="addWordField()">+ Weiteres Wort</button>
        <button class="btn-primary" onclick="saveLektion()">Lektion speichern</button>
        <button class="btn-outline" onclick="showScreen('home')">Abbrechen</button>
    </div>

    <div id="lektionWaehlen" class="screen hidden">
        <h2>Deine √úbungen</h2>
        <div id="lektionListe"></div>
        <button class="btn-outline" onclick="showScreen('home')">Zur√ºck</button>
    </div>

    <div id="modusWaehlen" class="screen hidden">
        <h2 id="selectedLekTitle">Lektion Name</h2>
        <button class="btn-primary" onclick="startGame('en-de')">Englisch -> Deutsch</button>
        <button class="btn-primary" onclick="startGame('de-en')">Deutsch -> Englisch</button>
        <button class="btn-primary" onclick="startGame('missing')">Fehlende Buchstaben</button>
        <button class="btn-outline" onclick="showScreen('lektionWaehlen')">Zur√ºck</button>
    </div>

    <div id="gameScreen" class="screen hidden">
        <div id="gameContent" class="game-card">
            <p id="gameTypeLabel" style="color:var(--text-sub)"></p>
            <div class="prompt" id="gamePrompt">Frage?</div>
            <div id="missingDisplay" class="missing-word hidden"></div>
            <p id="gameHint" style="color:var(--text-sub)"></p>
            <input type="text" id="gameInput" placeholder="Antwort hier..." autocomplete="off">
            <button class="btn-primary" onclick="checkAnswer()">Pr√ºfen</button>
            <div id="feedback" class="feedback"></div>
        </div>
        <button class="btn-outline" onclick="showScreen('modusWaehlen')">Spiel beenden</button>
    </div>

    <div id="lektionenVerwalten" class="screen hidden">
        <h2>Korrektur / L√∂schen</h2>
        <div id="manageListe"></div>
        <button class="btn-outline" onclick="showScreen('home')">Zur√ºck</button>
    </div>

    <script>
        let lessons = JSON.parse(localStorage.getItem('english_lessons')) || [];
        let currentLesson = null;
        let currentWords = [];
        let currentWordIndex = 0;
        let currentMode = '';
        let missingOriginal = '';

        function showScreen(id) {
            document.querySelectorAll('.screen').forEach(s => s.classList.add('hidden'));
            document.getElementById(id).classList.remove('hidden');
            if(id === 'lektionWaehlen') renderLektionen();
            if(id === 'lektionenVerwalten') renderManage();
            if(id === 'lektionErfassen') {
                document.getElementById('lekDatum').valueAsDate = new Date();
                document.getElementById('wordInputs').innerHTML = '<h3>W√∂rter</h3>';
                addWordField();
            }
        }

        function addWordField() {
            const div = document.createElement('div');
            div.className = 'word-row';
            div.innerHTML = `
                <input type="text" class="enIn" placeholder="EN" style="margin:0">
                <input type="text" class="deIn" placeholder="DE" style="margin:0">
                <select class="typeIn" style="margin:0; width:80px">
                    <option value="N">N</option><option value="V">V</option><option value="A">A</option>
                </select>
            `;
            document.getElementById('wordInputs').appendChild(div);
        }

        function saveLektion() {
            const thema = document.getElementById('lekThema').value;
            if(!thema) return alert("Thema angeben!");
            
            const wordDivs = document.querySelectorAll('.word-row');
            let words = [];
            wordDivs.forEach(div => {
                const en = div.querySelector('.enIn').value.trim();
                const de = div.querySelector('.deIn').value.trim();
                const type = div.querySelector('.typeIn').value;
                if(en && de) words.push({ en, de, type });
            });

            const newLek = {
                id: Date.now(),
                datum: document.getElementById('lekDatum').value,
                thema: thema,
                seite: document.getElementById('lekSeite').value,
                words: words
            };

            lessons.unshift(newLek);
            localStorage.setItem('english_lessons', JSON.stringify(lessons));
            showScreen('home');
        }

        function renderLektionen() {
            const container = document.getElementById('lektionListe');
            container.innerHTML = lessons.map(l => `
                <div class="lektion-card" onclick="selectLektion(${l.id})">
                    <strong>${l.thema}</strong><br>
                    <small>${l.datum} ‚Ä¢ Seite ${l.seite} ‚Ä¢ ${l.words.length} W√∂rter</small>
                </div>
            `).join('');
        }

        function renderManage() {
            const container = document.getElementById('manageListe');
            container.innerHTML = lessons.map((l, idx) => `
                <div class="lektion-card">
                    <strong>${l.thema}</strong>
                    <button class="btn-danger" style="width:auto; float:right" onclick="deleteLek(${idx})">L√∂schen</button>
                    <div style="clear:both; padding-top:10px;">
                        ${l.words.map(w => `<small>${w.en} = ${w.de} (${w.type})</small>`).join('<br>')}
                    </div>
                </div>
            `).join('');
        }

        function deleteLek(idx) {
            if(confirm("Lektion wirklich l√∂schen?")) {
                lessons.splice(idx, 1);
                localStorage.setItem('english_lessons', JSON.stringify(lessons));
                renderManage();
            }
        }

        function selectLektion(id) {
            currentLesson = lessons.find(l => l.id === id);
            document.getElementById('selectedLekTitle').innerText = currentLesson.thema;
            showScreen('modusWaehlen');
        }

        function startGame(mode) {
            currentMode = mode;
            currentWords = [...currentLesson.words].sort(() => 0.5 - Math.random());
            currentWordIndex = 0;
            showScreen('gameScreen');
            nextWord();
        }

        function nextWord() {
            if(currentWordIndex >= currentWords.length) {
                alert("Super! Alles geschafft.");
                showScreen('modusWaehlen');
                return;
            }
            const word = currentWords[currentWordIndex];
            const feedback = document.getElementById('feedback');
            const input = document.getElementById('gameInput');
            const missingDisplay = document.getElementById('missingDisplay');
            feedback.innerText = '';
            input.value = '';
            input.classList.remove('hidden');
            missingDisplay.classList.add('hidden');

            if(currentMode === 'en-de') {
                document.getElementById('gameTypeLabel').innerText = "Was heisst auf Deutsch?";
                document.getElementById('gamePrompt').innerText = word.en;
                document.getElementById('gameHint').innerText = `(${word.type})`;
            } else if(currentMode === 'de-en') {
                document.getElementById('gameTypeLabel').innerText = "Was heisst auf Englisch?";
                document.getElementById('gamePrompt').innerText = word.de;
                document.getElementById('gameHint').innerText = `(${word.type})`;
            } else if(currentMode === 'missing') {
                document.getElementById('gameTypeLabel').innerText = "F√ºlle die Buchstaben aus:";
                missingDisplay.classList.remove('hidden');
                document.getElementById('gameHint').innerText = `Deutsch: ${word.de}`;
                
                let str = word.en;
                missingOriginal = word.en;
                let indices = [];
                // 2-3 Buchstaben verstecken
                let count = str.length > 4 ? 3 : 2;
                while(indices.length < count) {
                    let r = Math.floor(Math.random() * str.length);
                    if(!indices.includes(r) && str[r] !== ' ') indices.push(r);
                }
                let display = str.split('').map((char, i) => indices.includes(i) ? '_' : char).join('');
                document.getElementById('gamePrompt').innerText = ''; 
                missingDisplay.innerText = display;
            }
        }

        function checkAnswer() {
            const word = currentWords[currentWordIndex];
            const userIn = document.getElementById('gameInput').value.trim().toLowerCase();
            const feedback = document.getElementById('feedback');
            let correct = false;

            if(currentMode === 'en-de') correct = (userIn === word.de.toLowerCase());
            else if(currentMode === 'de-en') correct = (userIn === word.en.toLowerCase());
            else if(currentMode === 'missing') correct = (userIn === missingOriginal.toLowerCase());

            if(correct) {
                feedback.innerText = "Richtig! üåü";
                feedback.style.color = "var(--correct)";
                setTimeout(() => {
                    currentWordIndex++;
                    nextWord();
                }, 1000);
            } else {
                feedback.innerText = "Leider falsch. Versuchs nochmal!";
                feedback.style.color = "var(--danger)";
            }
        }
    </script>
</body>
</html>
